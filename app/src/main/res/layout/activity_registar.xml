<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    tools:context=".RegistarActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Edt_movel"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:layout_marginTop="272dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="@string/STR_movel"
        android:textColor="@color/escrever"
        android:textColorHint="@color/escrever"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Edt_nome"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:layout_marginTop="208dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="@string/STR_nome"
        android:textColor="@color/escrever"
        android:textColorHint="@color/escrever"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/Str_registar_1"
        android:textColor="@color/overButton"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btn_voltar"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="632dp"
        android:backgroundTint="@color/button"
        android:textColor="@color/escrever"
        android:text="@string/voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btn_registar"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:textColor="@color/escrever"
        android:layout_marginTop="552dp"
        android:backgroundTint="@color/button"
        android:text="@string/Str_registar_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Edt_password1"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:layout_marginTop="466dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="@string/STR_password"
        android:textColor="@color/escrever"
        android:textColorHint="@color/escrever"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Edt_idade"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:layout_marginTop="399dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="@string/STR_idade"
        android:textColor="@color/escrever"
        android:textColorHint="@color/escrever"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Edt_email1"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:layout_marginTop="336dp"
        android:backgroundTint="@color/button"
        android:ems="10"
        android:hint="@string/STR_email"
        android:textColor="@color/escrever"
        android:textColorHint="@color/escrever"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>