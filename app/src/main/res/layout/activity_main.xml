<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/Img_logoUser"
        android:layout_width="278dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/Btn_comecar"
        android:layout_width="242dp"
        android:layout_height="47dp"
        android:layout_marginTop="496dp"
        android:background="@drawable/board_textview"
        android:backgroundTint="@color/backgroud_2"
        android:text="@string/STR_Comecar"

        android:textColor="@color/overButton"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!---textview a dizer a versÃ£o do programa no meio e no fundo do programa-->


    <Button
        android:id="@+id/Btn_ajudar"
        android:layout_width="242dp"
        android:layout_height="47dp"
        android:layout_marginTop="556dp"
        android:background="@drawable/board_textview"
        android:backgroundTint="@color/backgroud_2"
        android:text="@string/STR_ajuda"
        android:textColor="@color/overButton"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/versao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/versao"
        android:textColor="@color/overButton"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>